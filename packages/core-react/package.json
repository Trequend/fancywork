{
  "name": "@fancywork/core-react",
  "private": true,
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "start": "rollup -c -w",
    "build": "rollup -c",
    "test": "run-s test:lint test:build",
    "test:lint": "eslint lib --ext .js,.jsx,.ts,.tsx && stylelint lib/**/*.scss",
    "test:build": "run-s build",
    "pre-commit": "run-s test"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "parserOptions": {
          "project": [
            "./tsconfig.json"
          ]
        }
      }
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss"
  },
  "peerDependencies": {
    "@ant-design/icons": "^4.7.0",
    "@fancywork/core": "*",
    "antd": "^4.16.13",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@ant-design/icons": "^4.7.0",
    "@fancywork/core": "*",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/react": "^17.0.32",
    "@types/react-dom": "^17.0.10",
    "antd": "^4.16.13",
    "postcss": "^8.3.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-postcss": "^4.0.1",
    "sass": "^1.43.3"
  }
}
