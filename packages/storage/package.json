{
  "name": "@fancywork/storage",
  "private": true,
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "webpack --stats minimal",
    "test": "run-s test:lint test:build",
    "test:lint": "eslint lib --ext .js,.jsx,.ts,.tsx && stylelint lib/**/*.scss",
    "test:build": "webpack --stats minimal --config webpack.test.config.js",
    "pre-commit": "yarn run test"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "parserOptions": {
          "project": [
            "./tsconfig.json"
          ]
        }
      }
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss"
  },
  "peerDependencies": {
    "antd": "^4.16.13",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0"
  },
  "devDependencies": {
    "@fancywork/core": "*",
    "@types/react": "^17.0.32",
    "@types/react-dom": "^17.0.10",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "antd": "^4.16.13",
    "css-loader": "^6.4.0",
    "idb": "^6.1.5",
    "mini-css-extract-plugin": "^2.4.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "sass": "^1.43.3",
    "sass-loader": "^12.2.0",
    "ts-loader": "^9.2.6",
    "typescript": "4.3.5",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1"
  }
}
